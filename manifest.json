{
  "name": "Moments for Youtube",
  "version": "1.0",
  "description": "Annotate and store your favourite moments of a video as a timestamp.",
  "author": "Rathusshan Kuganesan",
  "manifest_version": 2,
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "page_action" :
  {
    "default_title" : "Moments",
    "default_icon" : "icons/logoRed19.png"
    //"default_popup" : "popup.html"
  },
  "content_scripts"  : [{ 
                          "matches" : ["*://*.youtube.com/*"], 
                          "js": ["scripts/jquery-2.2.0.min.js", "scripts/content.js"], 
                          "run_at" : "document_end"
                       }],
  //permissions array
  "permissions" : [
    "declarativeContent",
    "activeTab",
    "storage"
  ],
  "icons" : {
    "48" : "icons/logoRed48.png",
    "128" : "icons/logoRed128.png"
  },
  "web_accessible_resources" : ["scripts/test.js"]
}
